{
    "Auth": {
        "Authority": "",
        "ApiName": "Api.Core"
    },
    "Cors": {
        "Hosts": []
    },
    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning"
            }
        },
        "Enrich": [
            "WithThreadId"
        ],
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:MM-dd-yyyy HH:mm:ss.fffffffzzz}] [{Host}] [{EnvironmentName}] [{ServiceName}] [{SourceContext}] [{ThreadId}] [{Level}] {Message}{NewLine}{Exception}"
                }
            },
            {
                "Name": "Elasticsearch",
                "Args": {
                    "nodeUris": "http://localhost:9200",
                    "autoRegisterTemplate": true
                }
            }
        ]
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    }
}